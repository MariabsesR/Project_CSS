<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="pt.ul.fc.di.css.javafxexample.control.ThesisThemeController">
	<top>
		<Label text="Thesis Themes" style="-fx-font-size: 20px;" />
	</top>
	<center>
		<ListView fx:id="themeListView" BorderPane.alignment="CENTER" />
	</center>
	<bottom>
		<HBox alignment="CENTER" spacing="10">
			<Label fx:id="errorLabel" textFill="red" />
			<Button text="Submit choosen thesis theme"
				onAction="#submitThesisTheme" />
			<Button text="Return" onAction="#returnToMenu" />
		</HBox>
	</bottom>
</BorderPane>
